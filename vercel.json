{
    "version": 2,
    "builds": [
        { "src": "/api/.*", "use": "@vercel/node" },
        { "src": "/public/**", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/api/employees", "dest": "/api/employees.js" },
        { "src": "/api/addEmployee", "dest": "/api/addEmployee.js" },
        { "src": "/api/edit/:id", "dest": "/api/edit.js" },
        { "src": "/api/employees/:_id", "dest": "/api/employees.js" },
        { "src": "/api/delete/:id", "dest": "/api/delete.js" },
        { "src": "/(.*)", "dest": "/public/index.html" }
    ],
    "rewrites": [
        {"source": "/(.*)", "destination": "/"}
    ]
}